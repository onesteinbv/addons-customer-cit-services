<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="event_description_full_ept" inherit_id="website_event.event_description_full">
        <xpath expr="//t[@t-if='event.is_one_day']/..//div[hasclass('dropdown')]" position="replace" />
        <xpath expr="//div[@t-if='event.address_id']" position="replace" />
        <xpath expr="//div[@t-if='event.organizer_id']" position="replace" />
        <xpath expr="//div[hasclass('o_wevent_sidebar_block')][last()]" position="replace" />
    </template>
    <template id="event_details_ept" inherit_id="website_event.event_details">
        <xpath expr="//t[@t-call='website_event.registration_template']/.." position="replace" />
    </template>
    <template id="event_time" inherit_id="website_event.event_time">
        <xpath expr="//i[hasclass('fa-calendar')]/.." position="replace">
            <a href="#" role="button" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-calendar"/>
                <t t-if="current_date" t-esc="current_date"/>
                <t t-else="">All Events</t>
            </a>
        </xpath>
    </template>
</odoo>
